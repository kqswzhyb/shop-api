<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.xb.mapper.SysProvincesMapper">
    <resultMap type="Province" id="provinceResult">
        <id property="id" column="id"/>
        <result property="provinceId" column="province_id"/>
        <result property="province" column="province"/>
        <result property="countryId" column="country_id"/>
        <result property="provinceEn" column="province_en"/>
    </resultMap>

    <select id="provinceList" parameterType="String" resultMap="provinceResult">
        select  *  from  sys_provinces sp
        <if test="countryId != null and countryId != ''">
          where  sp.country_id = #{countryId}
        </if>
    </select>
</mapper>