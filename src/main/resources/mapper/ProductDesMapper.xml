<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.xb.mapper.ProductDesMapper">
    <resultMap type="ProductDes" id="productDesResult">
        <id property="desId" column="des_id"/>
        <result property="productId" column="product_id"/>
        <result property="desName" column="des_name"/>
        <result property="content" column="content"/>
        <result property="status" column="status"/>
        <result property="createBy" column="create_by"/>
        <result property="createAt" column="create_at"/>
        <result property="updateAt" column="update_at"/>
        <result property="remark" column="remark"/>
    </resultMap>
    <select id="productDesList" parameterType="String" resultMap="productDesResult">
        select  *  from  product_des des
        WHERE
        des.status = '0'
        <if test="productId != null and productId != ''">
            and des.product_id = #{productId}
        </if>
    </select>

    <insert id="bathSaveProductDes" parameterType="list">
        insert into product_des(
        des_id,
        product_id,
        des_name,
        content,
        status,
        remark,
        create_by,
        create_at,
        update_at
        )values
        <foreach collection="list" item="item" separator=",">
            (
            #{item.desId},
            #{item.productId},
            #{item.desName},
            #{item.content},
            #{item.status},
            #{item.remark},
            #{item.createBy},
            sysdate(),
            sysdate()
            )
        </foreach>
    </insert>

    <delete id="deleteProductDesById" parameterType="String">
 		delete from product_des where product_id = #{productId}
 	</delete>
</mapper>